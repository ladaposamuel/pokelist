{
	"name": "pokelist",
	"version": "1.0.0",
	"main": "",
	"private": true,
	"scripts": {
		"dev": "cross-env NODE_ENV=development ts-node-dev --transpile-only --exit-child src/app.ts",
		"start:dev": "tsx watch --clear-screen=false ./src/app.ts",
		"start": "node ./dist/app.js",
		"build": "tsc  -p tsconfig.json",
		"lint": "eslint \"src/**/*.{ts,js}\" --fix --max-warnings=0",
		"fetch-pokemon": "npx tsx ./src/cli/pokemonFetcher.ts",
		"typeorm:generate": " npx ts-node ./node_modules/typeorm/cli.js migration:generate ./src/database/migrations/CreateTables -d ./src/database/connection.ts",
		"typeorm:migrate": "npx ts-node ./node_modules/typeorm/cli.js migration:run -d src/database/connection.ts",
		"typeorm:fresh": "yarn typeorm:drop && yarn typeorm:migrate && yarn typeorm:seed",
		"typeorm:drop": "npx ts-node ./node_modules/typeorm/cli.js schema:drop -d src/database/connection.ts",
		"typeorm:revert": "npx ts-node ./node_modules/typeorm/cli.js migration:revert -d src/database/connection.ts",
		"typeorm:seed": "npx ts-node ./node_modules/typeorm-extension/bin/cli.cjs seed:run -d ./src/database/connection.ts"
	},
	"dependencies": {
		"@overnightjs/core": "^1.7.6",
		"axios": "^1.7.3",
		"bcrypt": "^5.1.1",
		"body-parser": "^1.20.2",
		"class-transformer": "^0.5.1",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"express": "^4.19.2",
		"express-async-errors": "^3.1.1",
		"helmet": "^7.1.0",
		"http-status-codes": "^2.3.0",
		"jsonwebtoken": "^9.0.2",
		"morgan": "^1.10.0",
		"pg": "^8.12.0",
		"pokedex-promise-v2": "^4.2.0",
		"prettier": "^3.3.3",
		"reflect-metadata": "^0.2.2",
		"signale": "^1.4.0",
		"typeorm": "^0.3.20",
		"typeorm-extension": "^3.6.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/compression": "^1.7.5",
		"@types/cookie-parser": "^1.4.7",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/morgan": "^1.9.9",
		"@types/signale": "^1.4.7",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"cross-env": "^7.0.3",
		"nodemon": "^3.1.4",
		"prettier-eslint": "^16.3.0",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"tsup": "^8.0.2",
		"tsx": "^4.7.2",
		"typescript": "^5.5.3"
	}
}
